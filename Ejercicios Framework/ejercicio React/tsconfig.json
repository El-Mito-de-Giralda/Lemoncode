{
    "compilerOptions": {
      "target": "es6",
      "module": "es6",
      "moduleResolution": "node",
      "declaration": false,
      "noImplicitAny": false,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "jsx": "react",
      "noLib": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "types": ["jest", "@testing-library/jest-dom"]
    },
    "include": ["./src/**/*", "./config/test/setup-after.ts"],
    "exclude": ["node_modules"]
  }